<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景图像 -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners
                    android:radius="@dimen/progress_bar_download_radius">
            </corners>
            <size
                    android:height="@dimen/progress_bar_download_height">
            </size>
            <gradient
                    android:endColor="@color/progress_bar_download_bg_color"
                    android:startColor="@color/progress_bar_download_bg_color"/>

        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <corners
                        android:radius="@dimen/progress_bar_download_radius">
                </corners>
                <size
                        android:height="@dimen/progress_bar_download_height">
                </size>
                <gradient
                        android:endColor="@color/progress_bar_download_progress_color"
                        android:startColor="@color/progress_bar_download_progress_color"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners
                        android:radius="@dimen/progress_bar_download_radius">
                </corners>
                <size
                        android:height="@dimen/progress_bar_download_height">
                </size>
                <gradient
                        android:endColor="@color/progress_bar_download_progress_color"
                        android:startColor="@color/progress_bar_download_progress_color"/>
            </shape>
        </clip>
        clip>
    </item>

</layer-list>