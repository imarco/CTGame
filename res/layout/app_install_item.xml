<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="10dip" >

    <ImageView
        android:id="@+id/app_install_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/image_app_sample" />

    <Button
        android:id="@+id/btn_app_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/app_install_img"
        android:layout_below="@id/app_install_img"
        android:layout_marginTop="5dip"
        android:background="@drawable/button_small_white"
        android:textColor="@color/tab_text"
        android:gravity="center"
        android:text="所有奖励"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/app_install_img"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@id/app_install_img"
        android:text="神庙逃亡"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_app_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_app_name"
        android:layout_marginLeft="3dip"
        android:layout_toRightOf="@id/tv_app_name"
        android:text="10M"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_options"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:text="安装"
        android:textColor="@color/tab_text"
        android:background="@drawable/btn_option_selector"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:layout_alignParentRight="true"
        />
    
    <!-- 因为相对布局的需要，因此，中间的内容是最后一部分放 -->
    <TextView
        android:id="@+id/tv_prize_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_app_bonus"
        android:layout_alignLeft="@id/tv_app_name"
        android:drawableLeft="@drawable/icon_play_chance"
        android:gravity="center"
        android:paddingLeft="3dip"
        android:text="12 次"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_luckybean_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_prize_count"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/tv_prize_count"
        android:drawableLeft="@drawable/icon_play_chance"
        android:gravity="center"
        android:paddingLeft="3dip"
        android:text="3010"
        android:textColor="#ffff0000"
        android:textSize="10sp" />
    
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_app_name"
        android:layout_below="@id/tv_app_name"
        android:layout_toLeftOf="@id/btn_options"
        android:layout_marginRight="10dip"
        android:layout_marginTop="8dip"
        android:layout_centerVertical="true"
        android:textSize="10sp"
        android:maxLines="2"
        android:text="最有趣的的猫狗大战来了，有担任模式和双人模式，还在等什么，一起来玩吧.." />

    

</RelativeLayout>