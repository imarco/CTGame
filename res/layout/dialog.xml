<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dialog_panel_yellow"
                android:paddingBottom="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding">
    <TextView
            android:id="@+id/dialog_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is title"
            android:textColor="@color/tab_text"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dialog_title_text_size"/>
    <TextView
            android:id="@+id/dialog_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_text_title"
            android:text="This is a custom dialog"
            android:layout_marginTop="@dimen/dialog_content_margin"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/dialog_content_text_size"
            android:textColor="@color/tab_text"/>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_text_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dialog_content_margin"
            android:gravity="bottom|center_horizontal">
        <Button
                android:id="@+id/dialog_button_cancel"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/dialog_button_width"
                android:layout_height="wrap_content"
                android:text="确定"
                android:gravity="center"
                android:background="@drawable/button_yellow"/>
        <Button
                android:id="@+id/dialog_button_ok"
                android:layout_width="@dimen/dialog_button_width"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dialog_button_cancel"
                android:layout_marginLeft="@dimen/dialog_button_margin"
                android:gravity="center"
                android:background="@drawable/button_yellow"
                android:text="取消"/>
    </RelativeLayout>
</RelativeLayout>