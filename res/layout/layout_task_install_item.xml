<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/layout_app_task_install_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            >

        <!-- 应用的图标 -->
        <ImageView
                android:id="@+id/image_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_app_sample"
                >
        </ImageView>

        <!-- 所有奖励的按钮 -->
        <Button
                android:id="@+id/btn_app_bonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_app"
                android:layout_alignLeft="@id/image_app"
                android:layout_alignRight="@id/image_app"
                android:layout_marginTop="@dimen/button_small_padding_margin_top"
                android:background="@drawable/button_small_white"
                android:paddingTop="@dimen/button_small_padding_top_bottom"
                android:paddingBottom="@dimen/button_small_padding_top_bottom"
                android:text="所有奖励"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/button_small_download_text_size"
                >

        </Button>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/layout_app_task_install_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/layout_app_task_install_left"
            android:layout_alignTop="@id/layout_app_task_install_left"
            android:layout_alignBottom="@id/layout_app_task_install_left"
            android:layout_marginLeft="5dp"
            >

        <!-- 下载管理按钮 -->
        <Button
                android:id="@+id/btn_app_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_small_blue"
                android:text="安装"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/button_small_padding_top_bottom"
                android:paddingBottom="@dimen/button_small_padding_top_bottom"
                android:layout_marginRight="@dimen/button_small_margin_right"
                android:textColor="@color/tab_text_normal"
                android:textSize="@dimen/button_blue_text_size"
                >
        </Button>

        <!-- 应用的名字和大小 -->
        <TextView
                android:id="@+id/tv_app_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="aaa">

        </TextView>

        <TextView
                android:id="@+id/tv_app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_app_name"
                android:layout_alignBottom="@id/tv_app_name"
                android:textColor="@color/tab_text"
                android:layout_marginLeft="3dp"
                android:text="10M"
                android:textSize="15sp" />


        <!-- 应用简单描述 -->
        <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/btn_app_options"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="这是应用的描述合唱这是应用的描述合唱这是应用的描述合唱"

                >
        </TextView>

        <!-- 应用所获得的奖励 -->
        <TextView
                android:id="@+id/tv_prize_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_summary"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/icon_play_chance"
                android:gravity="center"
                android:textColor="@color/tab_text"
                android:text="12 次"
                android:textSize="10sp" />

        <TextView
                android:id="@+id/tv_luckybean_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_prize_count"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/tv_prize_count"
                android:drawableLeft="@drawable/icon_play_chance"
                android:gravity="center"
                android:textColor="@color/tab_text"
                android:text="3010"
                android:textSize="10sp" />

    </RelativeLayout>

</RelativeLayout>