<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent" >  
  
    <FrameLayout  
        android:id="@+id/frame_content"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_above="@+id/frameLayout1"
        android:layout_alignParentLeft="true"  
        android:layout_alignParentRight="true"  
        android:layout_alignParentTop="true"  
        android:background="#ffffff" >
    </FrameLayout>
  
    <FrameLayout  
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/foot_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:gravity="center_horizontal" >  
  
            <FrameLayout  
                android:id="@+id/button_app"
                android:layout_width="fill_parent"
                android:layout_height="48dp"  
                android:layout_weight="1"   
                android:background="@drawable/tab_btn_background">
  
                <ImageView  
                    android:id="@+id/image_app"
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="top|center"  
                    android:layout_marginTop="5.0dip"
                    android:src="@drawable/tab_button_app_bg" />
  
                <TextView
                    android:id="@+id/text_app"
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="bottom|center"  
                    android:layout_marginBottom="6.0dip"  
                    android:text="玩应用"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="10sp" />  
            </FrameLayout>  
  
            <FrameLayout  
                android:id="@+id/button_video"
                android:layout_width="fill_parent"
                android:layout_height="48dp"  
                android:layout_weight="1"   
                android:background="@drawable/tab_btn_background">  
  
                <ImageView  
                    android:id="@+id/image_video"
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="top|center"  
                    android:layout_marginTop="5.0dip"
                    android:src="@drawable/tab_button_video_bg" />
  
                <TextView
                    android:id="@+id/text_video"
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="bottom|center"  
                    android:layout_marginBottom="6.0dip"  
                    android:text="看视频"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="10sp" />  
            </FrameLayout>  
  
            <FrameLayout  
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"  
                android:layout_weight="1" >  
            </FrameLayout>  
  
            <FrameLayout  
                android:id="@+id/button_award"
                android:layout_width="fill_parent"  
                android:layout_height="48dp"  
                android:layout_weight="1"   
                android:background="@drawable/tab_btn_background">  
  
                <ImageView  
                    android:id="@+id/image_award"
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="top|center"  
                    android:layout_marginTop="5.0dip"
                    android:src="@drawable/tab_button_award_bg" />
  
                <TextView
                    android:id="@+id/text_award"
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="bottom|center"  
                    android:layout_marginBottom="6.0dip"  
                    android:text="兑奖品"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="10sp" />  
            </FrameLayout>  
  
            <FrameLayout
                android:id="@+id/button_zone"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/tab_btn_background">

                <ImageView
                    android:id="@+id/image_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5.0dip"
                    android:src="@drawable/tab_button_zone_bg" />

                <TextView
                    android:id="@+id/text_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="我的"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="10sp" />
            </FrameLayout>
        </LinearLayout>  
    </FrameLayout>  
  
    <ImageView  
        android:id="@+id/button_big_wheel"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentBottom="true"  
        android:layout_centerHorizontal="true"  
        android:src="@drawable/button_foot_big_wheel" />

  
</RelativeLayout>